<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.layout.form"
xmlns:core="sap.ui.core"
controllerName="view.MyView"
>
   <Page title="Employee Registration Form" id="page">
    <content>
     	 <form:SimpleForm>    	 
     	    <form:title>     	    
     	       <core:Title text="Please Enter Employee Form"/>    	       
     	    </form:title>    	    
     	    <form:content>    	    
     	        <Label text="Employee Name"/>
     	        <Input id="eName"/>
     	        <Label text="Department"/>     	        
     	        <ComboBox>
     	           <items>
     	             <core:Item  text="SAP"/>
     	             <core:Item  text="ORACLE"/>
     	             <core:Item text="Java"/>
     	           </items>
     	        </ComboBox>      	           	        
     	    </form:content>     	    
     	 </form:SimpleForm>
    </content> 
   </Page>  
</mvc:View>